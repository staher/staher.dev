---
import BaseLayout from '../layouts/BaseLayout.astro'
import { projects } from '../data/projects'
---

<BaseLayout
  title="Projects"
  description="Selected projects with outcomes and stacks used. More case studies coming soon."
>
  <div class="flex flex-col gap-6">
    <div>
      <p class="text-sm font-medium uppercase tracking-[0.2em] text-base-content/60">Projects</p>
      <h1 class="mt-2 text-4xl font-bold tracking-tight">Recent work</h1>
      <p class="mt-2 max-w-2xl text-base text-base-content/70">
        A few highlights. I’ll keep this list updated as I add more case studies.
      </p>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      {projects.map((project) => (
        <article class="card bg-base-100 shadow-lg transition hover:-translate-y-1">
          <div class="card-body">
            <div class="flex items-center justify-between gap-2">
              <h3 class="card-title">{project.name}</h3>
              <div class="badge badge-primary badge-outline">Case</div>
            </div>
            <p class="text-base text-base-content/70">{project.summary}</p>
            <div class="mt-3 flex flex-wrap gap-2">
              {project.tech.map((tag) => (
                <div class="badge badge-ghost">{tag}</div>
              ))}
            </div>
            <div class="card-actions pt-4">
              <a class="link link-primary" href={project.link}>
                View project →
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
